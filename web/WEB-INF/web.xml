<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>org.cluscon.system.Initializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>org.cluscon.web.Dashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>org.cluscon.web.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CLI</servlet-name>
        <servlet-class>org.cluscon.web.CLI</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MPIRunnerServlet</servlet-name>
        <servlet-class>org.cluscon.web.MPIRunnerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploader</servlet-name>
        <servlet-class>org.cluscon.web.FileUploader</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MPIBuilder</servlet-name>
        <servlet-class>org.cluscon.web.MPIBuilder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TextEditor</servlet-name>
        <servlet-class>org.cluscon.web.TextEditor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BackgroundServlet</servlet-name>
        <servlet-class>org.cluscon.web.BackgroundServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Greeter</servlet-name>
        <servlet-class>org.cluscon.web.Greeter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CLI</servlet-name>
        <url-pattern>/CLI</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MPIRunnerServlet</servlet-name>
        <url-pattern>/MPIRunnerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploader</servlet-name>
        <url-pattern>/FileUploader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MPIBuilder</servlet-name>
        <url-pattern>/MPIbuild</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TextEditor</servlet-name>
        <url-pattern>/TextEditor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BackgroundServlet</servlet-name>
        <url-pattern>/background</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Greeter</servlet-name>
        <url-pattern>/greeter</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <!--<welcome-file>index.jsp</welcome-file>-->
        <welcome-file>greeter</welcome-file>
    </welcome-file-list>
</web-app>
